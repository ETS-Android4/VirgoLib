<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layout_block_padding"
    android:background="@color/black"
    tools:context=".mainbody.activity.math.MathActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onCalculate"
        android:text="计算器"
        android:textSize="@dimen/page_tv_size"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:padding="@dimen/page_button_padding"
        android:layout_marginBottom="@dimen/page_button_margin"
        android:background="@drawable/page_button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onAlgorithm"
        android:text="高级算法"
        android:textSize="@dimen/page_tv_size"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:padding="@dimen/page_button_padding"
        android:layout_marginBottom="@dimen/page_button_margin"
        android:background="@drawable/page_button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onHamoni"
        android:text="汉莫尼塔"
        android:textSize="@dimen/page_tv_size"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:padding="@dimen/page_button_padding"
        android:layout_marginBottom="@dimen/page_button_margin"
        android:background="@drawable/page_button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onCRT"
        android:text="中国剩余定理"
        android:textSize="@dimen/page_tv_size"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:padding="@dimen/page_button_padding"
        android:layout_marginBottom="@dimen/page_button_margin"
        android:background="@drawable/page_button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onRandom"
        android:text="随机数生成器"
        android:textSize="@dimen/page_tv_size"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:padding="@dimen/page_button_padding"
        android:layout_marginBottom="@dimen/page_button_margin"
        android:background="@drawable/page_button" />

</LinearLayout>